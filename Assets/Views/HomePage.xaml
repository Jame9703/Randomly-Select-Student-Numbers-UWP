        <Grid
            x:Name="checkBoxesGrid"
            MinWidth="100"
            MaxWidth="300"
            HorizontalAlignment="Left">
            <CheckBox
                x:Name="SelectAllCheckBox"
                Width="50"
                Margin="0,23,0,0"
                VerticalAlignment="Top"
                Checked="SelectAllCheckBox_Checked"
                Click="SelectAllCheckBox_Click"
                Content="全选"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="16"
                IsThreeState="True"
                Unchecked="SelectAllCheckBox_Unchecked" />
            <TextBlock
                x:Name="checkedCheckBoxesCount"
                Width="162"
                Height="27"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="16"
                Text="已选择0/0"
                TextWrapping="Wrap" />
            <ScrollViewer
                Margin="0,60,0,0"
                HorizontalScrollBarVisibility="Hidden"
                VerticalScrollBarVisibility="Visible"
                VerticalScrollMode="Enabled"
                ZoomMode="Enabled">
                <StackPanel
                    x:Name="StackPanelCheckBoxes"
                    Width="175"
                    Height="Auto"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <StackPanel.ChildrenTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition
                                FromHorizontalOffset="50"
                                FromVerticalOffset="50"
                                IsStaggeringEnabled="True" />
                        </TransitionCollection>
                    </StackPanel.ChildrenTransitions>
                </StackPanel>
            </ScrollViewer>

            <Button
                Margin="60,22,0,0"
                VerticalAlignment="Top"
                Content="快速选择"
                FontFamily="{StaticResource HarmonyOSSans}">
                <Button.Flyout>
                    <Flyout>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,6,0,0"
                                FontFamily="{StaticResource HarmonyOSSans}"
                                Text="开始值：" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,8,0,0"
                                FontFamily="{StaticResource HarmonyOSSans}"
                                Text="结束值：" />
                            <muxc:NumberBox
                                x:Name="BeginNumberBox"
                                Grid.Row="0"
                                Height="30"
                                MinWidth="110"
                                Margin="55,0,0,0"
                                Padding="5,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontFamily="{StaticResource HarmonyOSSans}"
                                Minimum="1"
                                SmallChange="1"
                                SpinButtonPlacementMode="Compact"
                                Value="1" />
                            <muxc:NumberBox
                                x:Name="EndNumberBox"
                                Grid.Row="1"
                                Height="30"
                                MinWidth="110"
                                Margin="55,5,0,0"
                                Padding="5,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontFamily="{StaticResource HarmonyOSSans}"
                                Minimum="1"
                                SmallChange="1"
                                SpinButtonPlacementMode="Compact" />
                            <CheckBox
                                x:Name="isOnlyThisRangeCheckBox"
                                Grid.Row="2"
                                Padding="5,6,0,0"
                                Content="仅选择此范围"
                                FontFamily="{StaticResource HarmonyOSSans}"
                                FontSize="14" />
                            <Button
                                x:Name="changeCheckBoxes"
                                Grid.Row="2"
                                Height="26"
                                Margin="120,5,0,0"
                                HorizontalAlignment="Left"
                                Click="changeCheckBoxes_Click"
                                Content="确定"
                                FontFamily="{StaticResource HarmonyOSSans}"
                                FontSize="12"
                                Style="{StaticResource AccentButtonStyle}" />
                        </Grid>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <controls:ContentSizer
            Grid.Column="1"
            Cursor="Hand"
            TargetControl="{x:Bind Path=checkBoxesGrid}" />
        <controls:Segmented
            x:Name="segmented"
            Grid.Column="2"
            Margin="10,3,0,0"
            VerticalAlignment="Top"
            SelectionChanged="segmented_SelectionChanged"
            SelectionMode="Single">
            <controls:SegmentedItem Content="单人模式" FontFamily="{StaticResource HarmonyOSSans}">
                <controls:SegmentedItem.Icon>
                    <SymbolIcon Symbol="Contact" />
                </controls:SegmentedItem.Icon>
            </controls:SegmentedItem>
            <controls:SegmentedItem Content="多人模式" FontFamily="{StaticResource HarmonyOSSans}">
                <controls:SegmentedItem.Icon>
                    <SymbolIcon Symbol="People" />
                </controls:SegmentedItem.Icon>
            </controls:SegmentedItem>
        </controls:Segmented>
        <Button
            x:Name="FrequencySelectorButton"
            Grid.Column="2"
            Margin="10,40,0,0"
            VerticalAlignment="Top"
            Content="滚动频率:50Hz"
            FontFamily="{StaticResource HarmonyOSSans}">
            <Button.Flyout>
                <Flyout>
                    <Grid>
                        <controls:RadialGauge
                            x:Name="FrequencySelector"
                            Maximum="100"
                            Minimum="0"
                            NeedleLength="60"
                            NeedleWidth="5"
                            ScaleWidth="20"
                            StepSize="1"
                            TickLength="10"
                            TickSpacing="10"
                            TickWidth="5"
                            ValueChanged="FrequencySelector_ValueChanged"
                            Value="50" />
                    </Grid>
                </Flyout>
            </Button.Flyout>
        </Button>
