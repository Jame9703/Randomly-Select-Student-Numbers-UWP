        <Grid
            x:Name="checkBoxesGrid"
            MinWidth="100"
            MaxWidth="300"
            HorizontalAlignment="Left">
            <CheckBox
                x:Name="SelectAllCheckBox"
                Width="50"
                Margin="0,23,0,0"
                VerticalAlignment="Top"
                Checked="SelectAllCheckBox_Checked"
                Click="SelectAllCheckBox_Click"
                Content="全选"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="16"
                IsThreeState="True"
                Unchecked="SelectAllCheckBox_Unchecked" />
            <TextBlock
                x:Name="checkedCheckBoxesCount"
                Width="162"
                Height="27"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="16"
                Text="未选择"
                TextWrapping="Wrap" />
            <ScrollViewer
                Margin="0,60,0,0"
                HorizontalScrollBarVisibility="Hidden"
                VerticalScrollBarVisibility="Visible"
                VerticalScrollMode="Enabled"
                ZoomMode="Enabled">
                <StackPanel
                    x:Name="StackPanelCheckBoxes"
                    Width="175"
                    Height="Auto"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <StackPanel.ChildrenTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition
                                FromHorizontalOffset="50"
                                FromVerticalOffset="50"
                                IsStaggeringEnabled="True" />
                        </TransitionCollection>
                    </StackPanel.ChildrenTransitions>
                </StackPanel>
            </ScrollViewer>

            <Button
                Margin="60,22,0,0"
                VerticalAlignment="Top"
                Content="快速选择"
                FontFamily="{StaticResource HarmonyOSSans}">
                <Button.Flyout>
                    <Flyout>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,6,0,0"
                                FontFamily="{StaticResource HarmonyOSSans}"
                                Text="开始值：" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,8,0,0"
                                FontFamily="{StaticResource HarmonyOSSans}"
                                Text="结束值：" />
                            <muxc:NumberBox
                                x:Name="BeginNumberBox"
                                Grid.Row="0"
                                Height="30"
                                Margin="55,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Minimum="1"
                                SmallChange="1"
                                SpinButtonPlacementMode="Inline"
                                Value="1" />
                            <muxc:NumberBox
                                x:Name="EndNumberBox"
                                Grid.Row="1"
                                Height="30"
                                Margin="55,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Minimum="1"
                                SmallChange="1"
                                SpinButtonPlacementMode="Inline" />
                            <Button
                                x:Name="changeCheckBoxes"
                                Grid.Row="2"
                                Height="30"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Click="changeCheckBoxes_Click"
                                Content="确定"
                                FontFamily="{StaticResource HarmonyOSSans}" />
                        </Grid>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <controls:ContentSizer
            Grid.Column="1"
            Cursor="Hand"
            TargetControl="{x:Bind checkBoxesGrid}" />
        <controls:Segmented
            x:Name="segmented"
            Grid.Column="2"
            Margin="10,2,0,0"
            VerticalAlignment="Top"
            SelectionChanged="segmented_SelectionChanged"
            SelectionMode="Single">
            <controls:SegmentedItem Content="单人模式" FontFamily="{StaticResource HarmonyOSSans}">
                <controls:SegmentedItem.Icon>
                    <SymbolIcon Symbol="Contact" />
                </controls:SegmentedItem.Icon>
            </controls:SegmentedItem>
            <controls:SegmentedItem Content="多人模式" FontFamily="{StaticResource HarmonyOSSans}">
                <controls:SegmentedItem.Icon>
                    <SymbolIcon Symbol="People" />
                </controls:SegmentedItem.Icon>
            </controls:SegmentedItem>
        </controls:Segmented>
        <Button
            x:Name="FrequencySelectorButton"
            Grid.Column="2"
            Margin="20,40,0,0"
            VerticalAlignment="Top"
            Content="滚动频率:50Hz"
            FontFamily="{StaticResource HarmonyOSSans}">
            <Button.Flyout>
                <Flyout>
                    <Grid>
                        <controls:RadialGauge
                            x:Name="FrequencySelector"
                            Maximum="100"
                            Minimum="0"
                            NeedleLength="60"
                            NeedleWidth="5"
                            ScaleWidth="20"
                            StepSize="1"
                            TickLength="10"
                            TickSpacing="10"
                            TickWidth="5"
                            ValueChanged="FrequencySelector_ValueChanged"
                            Value="50" />
                    </Grid>
                </Flyout>
            </Button.Flyout>
        </Button>
        <Grid x:Name="SingleModeGrid" Grid.Column="2">
            <AppBarButton
                x:Name="StartorStopButton"
                Width="97"
                Height="54"
                Margin="27,360,0,0"
                Background="#FFC0F2BC"
                Click="StartorStopButton_Click"
                FontFamily="{StaticResource HarmonyOSSans}"
                Icon="Play"
                Label="开始" />
            <TextBox
                x:Name="ResultTextBox"
                Width="232"
                Height="68"
                Margin="27,287,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="36"
                IsReadOnly="True"
                TextWrapping="Wrap" />
            <Image x:Name="StudentPhoto"  HorizontalAlignment="Left" Height="194" Margin="27,89,0,0" VerticalAlignment="Top" Width="178"/>
        </Grid>
        <Grid
            x:Name="MultipleModeGrid"
            Grid.Column="2"
            Visibility="Collapsed">
            <GridView x:Name="RandomNumbersGridView" Margin="12,146,0,10">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid
                            x:Name="MaxItemsWrapGrid"
                            MaximumRowsOrColumns="5"
                            Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
            <Button x:Name="GenerateButton"  Content="生成" FontFamily="{StaticResource HarmonyOSSans}" Margin="37,109,0,0" VerticalAlignment="Top" Click="GenerateButton_Click"/>
        </Grid>
    </Grid>
</Page>
