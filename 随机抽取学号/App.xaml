<?xml version="1.0" ?>
<Application
    x:Class="随机抽取学号.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:随机抽取学号">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style TargetType="NumberBox">
                        <Setter Property="Foreground" Value="{ThemeResource SystemBaseHighColor}" />
                    </Style>
                    <Style TargetType="ToolTip">
                        <Setter Property="FontFamily" Value="{StaticResource HarmonyOSSans}" />
                        <Setter Property="FontSize" Value="20" />
                    </Style>
                    <FontFamily x:Key="HarmonyOSSans">ms-appx:///Fonts/HarmonyOS_Sans_SC_Medium.ttf#HarmonyOS Sans SC</FontFamily>
                    <FontFamily x:Key="SegoeFluentIcons">ms-appx:///Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons</FontFamily>
                </ResourceDictionary>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <!--  定义浅色主题资源  -->
                            <SolidColorBrush x:Key="MyBrush" Color="Yellow" />
                            <SolidColorBrush
                                x:Key="GridBackground"
                                Opacity="0.3"
                                Color="White" />
                            <SolidColorBrush x:Key="LineNumberForeground" Color="#E42B91AF" />
                            <Color x:Key="ButtonForegroundColor">Green</Color>

                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Dark">
                            <!--  定义深色主题资源  -->
                            <SolidColorBrush x:Key="MyBrush" Color="Green" />
                            <SolidColorBrush
                                x:Key="GridBackground"
                                Opacity="0.2"
                                Color="Black" />
                            <SolidColorBrush x:Key="LineNumberForeground" Color="#E4858585" />
                            <Color x:Key="ButtonForegroundColor">yellow</Color>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
