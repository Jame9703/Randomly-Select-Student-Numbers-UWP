<Page
    x:Class="随机抽取学号.Views.NumbersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:随机抽取学号.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">
    <Page.Resources>
        <animations:ImplicitAnimationSet x:Name="ShowTransitions">
            <animations:OffsetAnimation
                EasingMode="EaseOut"
                From="0,24,0"
                To="0"
                Duration="0:0:0.4" />
            <animations:OpacityAnimation EasingMode="EaseOut" Duration="0:0:0.2" />
        </animations:ImplicitAnimationSet>
        <animations:ImplicitAnimationSet x:Name="HideTransitions">
            <animations:OffsetAnimation
                EasingMode="EaseOut"
                From="0"
                To="0,24,0"
                Duration="0:0:0.2" />
            <animations:OpacityAnimation EasingMode="EaseOut" Duration="0:0:0.1" />
        </animations:ImplicitAnimationSet>

    </Page.Resources>
    <Grid x:Name="ContentGrid">
        <controls:Segmented
            x:Name="ModeSegmented"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            SelectedIndex="0"
            SelectionMode="Single">
            <controls:SegmentedItem
                Content="整数"
                FontFamily="{StaticResource HarmonyOSSans}"
                Tag="IntMode" />
            <controls:SegmentedItem
                Content="小数"
                FontFamily="{StaticResource HarmonyOSSans}"
                Tag="FloatMode" />
        </controls:Segmented>
        <controls:SwitchPresenter Margin="195,180,0,0" Value="{Binding SelectedItem.Tag, ElementName=segmented}">
            <controls:Case Value="GridMode">
                <StackPanel animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}" />
            </controls:Case>
            <controls:Case Value="ListMode">
                <StackPanel animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}" />
            </controls:Case>
            <controls:Case Value="TextMode">
                <StackPanel animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}" />
            </controls:Case>
        </controls:SwitchPresenter>
        <NumberBox
            x:Name="RangeFromNumberBox"
            Width="100"
            Margin="-2,110,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="" />
        <TextBlock
            Width="67"
            Margin="-2,85,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="开始值："
            TextWrapping="Wrap" />
        <TextBlock
            Margin="-2,155,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="结束值："
            TextWrapping="Wrap" />
        <NumberBox
            x:Name="RangeToNumberBox"
            Width="100"
            Margin="-2,180,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="" />
        <TextBlock
            Margin="-2,231,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="选取个数："
            TextWrapping="Wrap" />
        <Button
            Width="75"
            Margin="10,295,0,0"
            VerticalAlignment="Top"
            Click="StartButton_Click"
            Content="生成"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}" />

        <Button
            Margin="135,98,0,0"
            VerticalAlignment="Top"
            Click="ClearResult_Click"
            Content="清空结果"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}" />
        <Button
            Margin="249,83,0,0"
            VerticalAlignment="Top"
            Click="ResetAll_Click"
            Content="全部重置"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}" />
        <NumberBox
            x:Name="SelectCountNumberBox"
            Width="100"
            Margin="-2,256,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Maximum="10000"
            Minimum="0" />
        <controls:Segmented
            x:Name="segmented"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            SelectedIndex="0"
            SelectionMode="Single">
            <controls:SegmentedItem Tag="GridMode">
                <FontIcon
                    FontFamily="{StaticResource SegoeFluentIcons}"
                    FontSize="24"
                    Glyph="&#xE8A9;" />
            </controls:SegmentedItem>
            <controls:SegmentedItem Tag="ListMode">
                <FontIcon
                    FontFamily="{StaticResource SegoeFluentIcons}"
                    FontSize="24"
                    Glyph="&#xEA37;" />
            </controls:SegmentedItem>
            <controls:SegmentedItem Tag="TextMode">
                <FontIcon
                    FontFamily="{StaticResource SegoeFluentIcons}"
                    FontSize="23"
                    Glyph="&#xE8A5;" />
            </controls:SegmentedItem>
        </controls:Segmented>
        <controls:SwitchPresenter Margin="195,180,0,0" Value="{Binding SelectedItem.Tag, ElementName=segmented}">
            <controls:Case Value="GridMode">
                <StackPanel animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}">
                    <GridView x:Name="RandomNumbersGridView" ItemsSource="{x:Bind RandomNumbersList}">
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="x:Int32">
                                <Border
                                    HorizontalAlignment="Stretch"
                                    BorderBrush="{ThemeResource SystemAccentColor}"
                                    BorderThickness="2">
                                    <TextBlock
                                        Padding="10"
                                        HorizontalAlignment="Stretch"
                                        FontFamily="{StaticResource HarmonyOSSans}"
                                        FontSize="24"
                                        Text="{x:Bind}" />
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
            </controls:Case>
            <controls:Case Value="ListMode">
                <StackPanel animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}">
                    <ListView
                        x:Name="RandomNumbersListView"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Visibility="Collapsed">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontFamily="{StaticResource HarmonyOSSans}"
                                    FontSize="16"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </controls:Case>
            <controls:Case Value="TextMode">
                <StackPanel animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}">
                    <Grid
                        x:Name="RandomNumbersTextBoxGrid"
                        Width="Auto"
                        Height="Auto"
                        Visibility="Collapsed">
                        <TextBlock
                            x:Name="ResultTextBlock"
                            Width="Auto"
                            Margin="50,50,0,0"
                            FontFamily="{StaticResource HarmonyOSSans}"
                            IsTextSelectionEnabled="True"
                            Text=""
                            TextWrapping="Wrap" />
                        <Slider
                            x:Name="slider"
                            Width="30"
                            Height="200"
                            Margin="0,50,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Minimum="4"
                            Orientation="Vertical"
                            TickFrequency="10"
                            TickPlacement="Outside"
                            ValueChanged="Slider_ValueChanged"
                            Value="20" />
                        <ComboBox
                            x:Name="SpanModeComboBox"
                            Width="147"
                            Margin="80,1,0,0"
                            CornerRadius="4,4,4,4"
                            FontFamily="{StaticResource HarmonyOSSans}"
                            IsEditable="True"
                            SelectedIndex="0">
                            <x:String>-- --</x:String>
                            <x:String>“ ”</x:String>
                            <x:String>‘ ’</x:String>
                            <x:String>空格</x:String>
                            <x:String>换行</x:String>
                        </ComboBox>
                        <TextBlock
                            Margin="10,6,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontFamily="{StaticResource HarmonyOSSans}"
                            FontSize="16"
                            Text="分隔符:"
                            TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </controls:Case>
        </controls:SwitchPresenter>

    </Grid>
</Page>
