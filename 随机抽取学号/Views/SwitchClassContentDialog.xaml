<ContentDialog
    x:Class="随机抽取学号.Views.SwitchClassContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:随机抽取学号.Classes"
    xmlns:controls1="using:OnePomodoro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:随机抽取学号.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Loaded="ContentDialog_Loaded"
    mc:Ignorable="d">
    <ContentDialog.Resources>
        <DataTemplate x:Key="ClassGridViewItemTemplate" x:DataType="classes:Class">
            <StackPanel Width="110" Height="130">
                <PersonPicture Margin="0,5,0,0" ProfilePicture="{x:Bind ClassEmblemPath, Mode=OneWay}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource HarmonyOSSans}"
                    Text="{x:Bind ClassName, Mode=OneWay}" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.Resources>

    <Grid>
        <GridView
            x:Name="ClassGridView"
            ItemTemplate="{StaticResource ClassGridViewItemTemplate}"
            ItemsSource="{x:Bind classes:StudentManager.ClassList}"
            ScrollViewer.HorizontalScrollMode="Disabled"
            ScrollViewer.VerticalScrollMode="Enabled"
            SelectionMode="Multiple" />
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button x:Name="AddClassButton">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE710;" />
                    <TextBlock FontFamily="{StaticResource HarmonyOSSans}" Text="添加" />
                </StackPanel>
                <Button.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="ClassNameTextBox" FontFamily="{StaticResource HarmonyOSSans}" />
                            <Button
                                Click="AddClassButton_Click"
                                Content="确定"
                                FontFamily="{StaticResource HarmonyOSSans}" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
            <Button x:Name="DeleteClassButton" Click="DeleteClassButton_Click">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE74D;" />
                    <TextBlock FontFamily="{StaticResource HarmonyOSSans}" Text="删除" />
                </StackPanel>
            </Button>
            <Button x:Name="RenameClassButton">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE8AC;" />
                    <TextBlock FontFamily="{StaticResource HarmonyOSSans}" Text="重命名" />
                </StackPanel>
                <Button.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="RenameClassNameTextBox" FontFamily="{StaticResource HarmonyOSSans}" />
                            <Button
                                Click="RenameClassButton_Click"
                                Content="确定"
                                FontFamily="{StaticResource HarmonyOSSans}" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </StackPanel>
        <Button
            x:Name="CloseButton"
            Click="CloseButton_Click"
            Content="退出"
            FontFamily="{StaticResource HarmonyOSSans}" />
    </Grid>
</ContentDialog>
