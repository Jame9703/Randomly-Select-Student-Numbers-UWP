<Page
    x:Class="随机抽取学号.Views.NumbersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:随机抽取学号.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">
    <Page.Resources>
        <!--<DataTemplate x:Key="RandomNumbersGridViewItemTemplate" x:DataType="local:NumbersPage">
            <Grid >
                <TextBlock FontFamily="{StaticResource HarmonyOSSans}" FontSize="16" Text="{x:Bind RandomNumbersList}"></TextBlock>
                </Grid>
        </DataTemplate>-->
    </Page.Resources>
    <Grid x:Name="ContentGrid" Background="{ThemeResource GridBackground}">
        <muxc:NumberBox
            x:Name="RangeFromNumberBox"
            Width="100"
            Margin="0,29,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="" />
        <TextBlock
            Width="67"
            Margin="0,4,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="开始值："
            TextWrapping="Wrap" />
        <TextBlock
            Margin="121,4,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="结束值："
            TextWrapping="Wrap" />
        <muxc:NumberBox
            x:Name="RangeToNumberBox"
            Width="100"
            Margin="121,29,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="" />
        <TextBlock
            Margin="248,4,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Text="选取个数："
            TextWrapping="Wrap" />
        <Button
            Width="75"
            Margin="5,83,0,0"
            VerticalAlignment="Top"
            Click="StartButton_Click"
            Content="生成"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}" />

        <Button
            Margin="121,83,0,0"
            VerticalAlignment="Top"
            Click="ClearResult_Click"
            Content="清空结果"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}" />
        <Button
            Margin="249,83,0,0"
            VerticalAlignment="Top"
            Click="ResetAll_Click"
            Content="全部重置"
            CornerRadius="4,4,4,4"
            FontFamily="{StaticResource HarmonyOSSans}" />
        <muxc:NumberBox
            x:Name="SelectCountNumberBox"
            Width="100"
            Margin="248,29,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="{StaticResource HarmonyOSSans}"
            FontSize="16"
            Maximum="10000"
            Minimum="0" />
        <ListView
            x:Name="RandomNumbersListView"
            Width="Auto"
            Height="Auto"
            Margin="0,180,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Visibility="Collapsed" />
        <GridView
            x:Name="RandomNumbersGridView"
            Margin="0,180,0,0"
            ItemsSource="{x:Bind RandomNumbersList}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="x:Int32">
                    <Border
                        HorizontalAlignment="Stretch"
                        BorderBrush="{ThemeResource SystemAccentColor}"
                        BorderThickness="2">
                        <TextBlock
                            Padding="10"
                            HorizontalAlignment="Stretch"
                            FontFamily="{StaticResource HarmonyOSSans}"
                            FontSize="24"
                            Text="{x:Bind}" />
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <Grid
            x:Name="RandomNumbersTextBoxGrid"
            Width="Auto"
            Height="Auto"
            Margin="0,180,30,30"
            Visibility="Collapsed">
            <TextBox
                x:Name="ResultTextBox"
                Width="Auto"
                Margin="50,50,0,0"
                CornerRadius="4,4,4,4"
                FontFamily="{StaticResource HarmonyOSSans}"
                IsReadOnly="True"
                RenderTransformOrigin="0.5,0.5"
                Text=""
                TextWrapping="Wrap" />
            <Slider
                x:Name="slider"
                Width="30"
                Height="200"
                Margin="0,50,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Minimum="4"
                Orientation="Vertical"
                TickFrequency="10"
                TickPlacement="Outside"
                ValueChanged="Slider_ValueChanged"
                Value="20" />
            <ComboBox
                x:Name="ComboBox2"
                Width="147"
                Margin="80,1,0,0"
                CornerRadius="4,4,4,4"
                FontFamily="{StaticResource HarmonyOSSans}"
                SelectedIndex="0">
                <x:String>-- --</x:String>
                <x:String>“ ”</x:String>
                <x:String>‘ ’</x:String>
            </ComboBox>
            <TextBlock
                Margin="10,6,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="16"
                Text="分隔符:"
                TextWrapping="Wrap" />
            <CheckBox
                x:Name="CheckBox"
                Margin="255,1,0,0"
                VerticalAlignment="Top"
                Content="保留历史文本"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="16"
                IsChecked="True" />
        </Grid>
        <controls:Segmented
            x:Name="segmented"
            Margin="0,140,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedIndex="0"
            SelectionChanged="segmented_SelectionChanged"
            SelectionMode="Single">
            <controls:SegmentedItem
                Content="网格模式"
                FontFamily="{StaticResource HarmonyOSSans}"
                Icon="{ui:SymbolIcon Symbol=ViewAll}" />
            <controls:SegmentedItem
                Content="列表模式"
                FontFamily="{StaticResource HarmonyOSSans}"
                Icon="{ui:SymbolIcon Symbol=List}" />
            <controls:SegmentedItem
                Content="文本模式"
                FontFamily="{StaticResource HarmonyOSSans}"
                Icon="{ui:SymbolIcon Symbol=Document}" />
        </controls:Segmented>

    </Grid>
</Page>
