<ContentDialog
    x:Class="随机抽取学号.Views.WelcomeContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:随机抽取学号.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel>
        <StackPanel
            x:Name="AppTitleBar"
            Width="180"
            Height="100"
            VerticalAlignment="Top"
            Background="Transparent">
            <Image
                Width="40"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Source="ms-appx:///Assets/RSSN_Logos/Square44x44Logo.altform-lightunplated_targetsize-48.png" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="16"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="随机抽取学号" />
            <TextBlock
                Height="17"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="{StaticResource HarmonyOSSans}"
                FontSize="10"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Randomly Select Student Numbers" />
        </StackPanel>
        <TextBlock
            FontFamily="{StaticResource HarmonyOSSans}"
            Text="欢迎使用随机抽取学号!随机抽取学号是一款使用C#编写，基于Random()伪随机数生成器，免费￥、开源的通用Windows平台应用程序(UWP)。随机抽取学号不会将您的隐私数据发送到服务器(姓名，性别，照片等)，同时应用数据会在卸载时自动删除"
            TextWrapping="Wrap" />
    </StackPanel>
</ContentDialog>
