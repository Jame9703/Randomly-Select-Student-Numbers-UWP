<ContentDialog
    x:Class="随机抽取学号.Views.SwitchClassContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:随机抽取学号.Classes"
    xmlns:controls1="using:OnePomodoro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:随机抽取学号.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Loaded="ContentDialog_Loaded"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">
    <ContentDialog.Resources>
        <DataTemplate x:Key="ClassGridViewItemTemplate" x:DataType="classes:Class">
            <StackPanel Width="110" Height="130">
                <PersonPicture Margin="0,5,0,0" ProfilePicture="{x:Bind ClassEmblemPath, Mode=OneWay}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource HarmonyOSSans}"
                    Text="{x:Bind ClassName, Mode=OneWay}" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.Resources>

    <Grid>
        <GridView
            x:Name="ClassGridView"
            ItemTemplate="{StaticResource ClassGridViewItemTemplate}"
            ItemsSource="{x:Bind classes:StudentManager.ClassList}"
            ScrollViewer.HorizontalScrollMode="Disabled"
            ScrollViewer.VerticalScrollMode="Enabled"
            SelectionMode="Multiple">
            <GridView.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition IsStaggeringEnabled="True" />
                </TransitionCollection>
            </GridView.ItemContainerTransitions>
        </GridView>
        <Button
            x:Name="CloseButton"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Width="40"
            Height="40"
            Click="CloseButton_Click">
            <FontIcon
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource SegoeFluentIcons}"
                Glyph="&#xE894;" />
        </Button>
    </Grid>
</ContentDialog>
